<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#f4f4f4">

    <Spinner
        android:id="@+id/carSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.5"
        android:background="#ffffff"
        android:entries="@array/train_car" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/metroinfoText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="오이도행 1213"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="6">


        <Button
            android:id="@+id/left_seat1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:background="@drawable/Lseat_noone"
            android:text="1" />

        <Button
            android:id="@+id/left_seat2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/left_seat1"
            android:layout_marginTop="84dp"
            android:background="@drawable/Lseat_noone"
            android:text="2" />

        <Button
            android:id="@+id/left_seat3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/left_seat1"
            android:layout_centerVertical="true"
            android:background="@drawable/Lseat_noone"
            android:text="3" />

        <Button
            android:id="@+id/left_seat4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/left_seat1"
            android:layout_marginBottom="82dp"
            android:background="@drawable/Lseat_noone"
            android:text="4" />

        <Button
            android:id="@+id/left_seat5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/left_seat1"
            android:background="@drawable/Lseat_noone"
            android:text="5" />

        <Button
            android:id="@+id/right_seat1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="70dp"
            android:background="@drawable/Rseat_noone"
            android:text="1" />

        <Button
            android:id="@+id/right_seat2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/right_seat1"
            android:layout_alignTop="@+id/left_seat2"
            android:background="@drawable/Rseat_noone"
            android:text="2" />

        <Button
            android:id="@+id/right_seat3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/right_seat1"
            android:layout_centerVertical="true"
            android:background="@drawable/Rseat_noone"
            android:text="3" />

        <Button
            android:id="@+id/right_seat4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/right_seat1"
            android:layout_alignTop="@+id/left_seat4"
            android:background="@drawable/Rseat_noone"
            android:text="4" />

        <Button
            android:id="@+id/right_seat5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/right_seat1"
            android:background="@drawable/Rseat_noone"
            android:text="5" />

        <TextView
            android:id="@+id/windowText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="창가"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/windowText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="창가"
            android:textSize="20sp" />

        <View
        android:id="@+id/view1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/triangle" />

        <View
            android:id="@+id/view2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            android:background="@drawable/triangle" />

        <View
            android:id="@+id/view3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/triangle" />

        <View
            android:id="@+id/view4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="109dp"
            android:background="@drawable/triangle" />

        <View
            android:id="@+id/view5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:background="@drawable/triangle" />
    </RelativeLayout>

</LinearLayout>